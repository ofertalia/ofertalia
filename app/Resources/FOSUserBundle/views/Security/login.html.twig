{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Login!!!!!{% endblock %}

{% block fos_user_content %}

    <div class="login-page">
        <div class="form">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <p class="title">Ofertalia admin</p>
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <input placeholder="Username" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                <input placeholder="Password" type="password" id="password" name="_password" required="required" />
                <p class="message">Remember me</p>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <input class="button" type="submit" id="_submit" name="_submit" value="Login" />
                {% if error %}
                    <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </form>
        </div>
    </div>

{% endblock fos_user_content %}
